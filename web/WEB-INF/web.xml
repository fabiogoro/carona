<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CadastroOfertaCaronaServlet</servlet-name>
        <servlet-class>control.CadastroOfertaCaronaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscaCaronaServlet</servlet-name>
        <servlet-class>control.BuscaCaronaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroUserServlet</servlet-name>
        <servlet-class>control.CadastroUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificaFacebookServlet</servlet-name>
        <servlet-class>control.VerificaFacebookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>control.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>control.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificaUsuarioServlet</servlet-name>
        <servlet-class>control.VerificaUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContaUsuarioServlet</servlet-name>
        <servlet-class>control.ContaUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContaCaronasServlet</servlet-name>
        <servlet-class>control.ContaCaronasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaronasIndexServlet</servlet-name>
        <servlet-class>control.CaronasIndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroOfertaCaronaServlet</servlet-name>
        <url-pattern>/CadastroOfertaCaronaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscaCaronaServlet</servlet-name>
        <url-pattern>/BuscaCaronaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroUserServlet</servlet-name>
        <url-pattern>/CadastroUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificaFacebookServlet</servlet-name>
        <url-pattern>/VerificaFacebookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificaUsuarioServlet</servlet-name>
        <url-pattern>/VerificaUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContaUsuarioServlet</servlet-name>
        <url-pattern>/ContaUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContaCaronasServlet</servlet-name>
        <url-pattern>/ContaCaronasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaronasIndexServlet</servlet-name>
        <url-pattern>/CaronasIndexServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/erro.jsp</location>
    </error-page>
</web-app>
